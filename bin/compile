#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# parse and derive params
BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

APT_CACHE_DIR="$CACHE_DIR/apt/cache"
APT_STATE_DIR="$CACHE_DIR/apt/state"

mkdir -p "$APT_CACHE_DIR/archives/partial"
mkdir -p "$APT_STATE_DIR/lists/partial"

echo "**Insalling mediasoup requirements**"

add-apt-repository -o dir::cache=$APT_CACHE_DIR -o dir::state=$APT_STATE_DIR universe
apt-get update
apt-get -o debug::nolocking=true -o dir::cache=$APT_CACHE_DIR -o dir::state=$APT_STATE_DIR" -y install python3-pip build-essential


echo "__Installation complete__"
